<%- include('header', {title: 'Edit Trip'}); -%>

<div class="trip-form-container">
  <div class="gradient-bg"></div>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8 grey-box p-4">
      <h1 class="mt-2" style="font-size: 50px; color: #a68dad">Edit Trip</h1>
      <form action="/trip/<%= tripData.id%>?_method=PUT" method="POST">
        <div class="row">
          <div class="col-sm-4 input-field">
            <label for="country">Where are you going?</label>
          </div>
          <div class="col-sm-7 input-field">
            <input
              type="text"
              id="country"
              name="country"
              value="<%= tripData.country%>"
              required
            /><br />
          </div>
          <div class="col-sm-2 input-field">
            <label for="start_date">Start Date:</label>
          </div>
          <div class="col-sm-4 input-field">
            <input
              type="date"
              id="start_date"
              name="start_date"
              value="<%= startDateFormatted%>"
              required
            /><br />
          </div>
          <div class="col-sm-2 input-field">
            <label for="end_date">End Date:</label>
          </div>
          <div class="col-sm-4 input-field">
            <input
              type="date"
              id="end_date"
              name="end_date"
              value="<%= endDateFormatted%>"
              required
            /><br />
          </div>
        </div>
        <div>
          <input class="new-trip-submit" type="submit" value="Submit" />
        </div>
      </form>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>
<%- include('footer'); -%>
