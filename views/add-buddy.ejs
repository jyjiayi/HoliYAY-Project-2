<%- include('header', {title: 'Add New Buddy'}); -%>

<div class="buddy-form-container">
  <div class="gradient-bg"></div>
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6 grey-box p-4">
      <h1 style="font-size: 50px; color: #a68dad">Add New Buddy</h1>
      <form action="/add-buddy" method="POST">
        <div class="row">
        <div class="row">
          <div class="col-sm-5 input-field">
            <label for="user_name">Adding buddy for:</label><br />
          </div>
          <div class="col-sm-7 input-field">
            <input
              type="text"
              id="user_name"
              name="user_name"
              value="<%= userData.name%>"
              readonly
              style="background:none"
            /><br />
          </div>
          </div>
          <div class="row">
          <div class="col-sm-5 input-field">
            <label for="buddy_user_name">New Buddy:</label><br />
          </div>
          <div class="col-sm-7 input-field">
            <input
              type="text"
              id="buddy_user_name"
              name="buddy_user_name"
              required
            /><br />
          </div>
        </div>
        </div>
        <div>
          <br />
          <input class="new-buddy-submit" type="submit" value="Submit" />
        </div>
      </form>
      </div>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>
<%- include('footer'); -%>
