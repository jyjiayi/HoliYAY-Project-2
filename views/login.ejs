<%- include('header', {title: 'Log In'}); -%>

<div class="login-container">
  <form action="/login" method="POST">
    <div class="row">
      <div class="col-10"><h1>Log In</h1></div>
    </div>
    <div class="row">
      <div class="col-10 col-md-5">
        <div class="form-group">
          <label for="name">Username:</label>
          <input type="text" name="name" class="form-control"></label>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-10 col-md-5">
        <div class="form-group">
          <label for="password">Password:</label>
          <input type="password" name="password" class="form-control"></label>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-10">
        <div><button type="submit">Submit</button></div>
      </div>
    </div>
    <br />
    <div>
      <a href="/signup">New? Register here</a>
    </div>
  </form>
</div>

<%- include('footer'); -%>
